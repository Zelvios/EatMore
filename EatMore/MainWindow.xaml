<Window x:Class="EatMore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EatMore"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        Title="Eat More - App" Height="700" Width="900">
    <Border>
        <Border.Clip>
            <RectangleGeometry RadiusX="30"
                               RadiusY="30"
                               Rect="0,0,900,700"/>
        </Border.Clip>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>


            <Grid Background="#3A4149"
              Grid.ColumnSpan="3"
              Panel.ZIndex="2"
              MouseDown="TopBar_MouseDown">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="1.2*"/>
                    <ColumnDefinition Width="1.2*"/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button x:Name="ButtonHomeSide"   
                       Content="EatMore"
                       Grid.Column="1"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontFamily="Fonts/#Dosis"
                       FontWeight="Medium"
                       FontSize="15"
                       Background="Transparent"
                       BorderBrush="Transparent"
                       Click="HomeSide_Click">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="TextElement.FontFamily" Value="Fonts/Dosis"/>
                            <Setter Property="Foreground" Value="#FF5733"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="#FF5733"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>


                <Button x:Name="ButtonPizzaSide" 
                       Content="Pizza"
                       Grid.Column="2"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontFamily="Fonts/#Dosis"
                       FontWeight="Medium"
                       FontSize="14"
                       Background="Transparent"
                       BorderBrush="Transparent"
                       Click="PizzaSide_Click">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="TextElement.FontFamily" Value="Fonts/Dosis"/>
                            <Setter Property="Foreground" Value="LightGray"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="#FF4C70"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>

                </Button>

                <Button x:Name="ButtonDrikkevareSide" 
                       Content="Drikkevare"
                       Grid.Column="3"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontFamily="Fonts/#Dosis"
                       FontWeight="Medium"
                       FontSize="14"
                       Background="Transparent"
                       BorderBrush="Transparent"
                       Click="DrikkeSide_Click">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="TextElement.FontFamily" Value="Fonts/Dosis"/>
                            <Setter Property="Foreground" Value="LightGray"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="Cyan"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <StackPanel Orientation="Horizontal" 
                        Grid.Column="12" 
                        Grid.ColumnSpan="2"
                        HorizontalAlignment="Right"
                        Margin="0 0 0 0"
                        >

                    <Button x:Name="WindowMinimize" 
                         BorderThickness="0"
                        Foreground="White"
                        Content="-"
                        FontSize="16"
                        Cursor="Hand"
                        Grid.Column="12"
                        Width="50"
                        Click="WindowMinimize_Click">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="TextElement.FontFamily" Value="Fonts/Dosis"/>
                                <Setter Property="Background" Value="#383660"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="LightBlue"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>



                    <Button x:Name="WindowClose" 
                        BorderThickness="0"
                        Margin="0"
                        Foreground="White"
                        Content="X"
                        FontSize="16"
                        Cursor="Hand"
                        Width="50"
                        Click="WindowClose_Click">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="TextElement.FontFamily" Value="Fonts/Dosis"/>
                                <Setter Property="Background" Value="#383660"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF4C70"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}">

                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>

                    </Button>

                </StackPanel>


            </Grid>

            <Border Grid.Row="1" 
                Grid.ColumnSpan="3"
                Visibility="Visible"
                x:Name="HomeSide">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                        <GradientStop Color="black" 
                                  Offset="0"/>
                        <GradientStop Color="#3b5469" 
                                  Offset="1.50"/>
                    </LinearGradientBrush>
                </Border.Background>



                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Image Source="Background.jpg" 
                           Stretch="Fill" 
                           Grid.Column="0" Grid.Row="0"
                           Grid.ColumnSpan="3" 
                           Grid.RowSpan="3"
                           Opacity="0.1"/>

                    <StackPanel Grid.Row="1" Grid.Column="1">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                            <TextBlock Text="🍕 EatMore"
                           Foreground="#FF5733"
                           FontSize="27"
                           FontWeight="Medium"
                           VerticalAlignment="Center"
                           FontFamily="Fonts/#Dosis"/>

                        </StackPanel>
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="Velkommen til denne pizza app"
                               Foreground="White"
                               FontSize="15"
                               FontWeight="Medium"
                               FontFamily="Fonts/#Dosis"
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap"/>

                            <TextBlock Text="- Denne app er en prototype og derfor ikke færdig"
                               Foreground="White"
                               FontSize="15"
                               FontWeight="Medium"
                               FontFamily="Fonts/#Dosis"
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="Pizza"
                                    Foreground="White"
                                    FontSize="15"
                                    FontWeight="Medium"
                                    Margin="10"
                                    Click="PizzaSide_Click">

                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="TextElement.FontFamily" Value="Fonts/Dosis"/>
                                        <Setter Property="Background" Value="#8C8C88"/>
                                        <Setter Property="Cursor" Value="Hand"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FF4C70"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>

                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Width="100" Height="25"
                                                CornerRadius="12"
                                                Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>

                            </Button>
                        </StackPanel>

                    </StackPanel>
                    <Grid Grid.Column="0" 
                          Grid.RowSpan="2"
                           Margin="0 -45 -610 85" >

                        <Grid.RenderTransform>
                            <RotateTransform Angle="50"/>
                        </Grid.RenderTransform>

                        <StackPanel Orientation="Horizontal"
                        Margin="-350 150 -255 -250"
                        Opacity="0.85">

                            <StackPanel>
                                <Border Width="700"
                            Height="35"
                            Background="white"
                            Margin="100 0 0 0"
                            CornerRadius="20"/>

                                <Border Width="700"
                            Height="35"
                            Background="#FF4C70"
                            Margin="0 15 0 0"
                            CornerRadius="20"/>

                                <Border Width="700"
                            Height="35"
                            Background="#383660"
                            Margin="75 15 0 0"
                            CornerRadius="20"/>
                            </StackPanel>

                            <StackPanel>
                                <Border Width="700"
                            Height="35"
                            Background="White"
                            Margin="100 0 0 0"
                            CornerRadius="20"/>

                                <Border Width="700"
                            Height="35"
                            Background="#FF4C70"
                            Margin="0 15 0 0"
                            CornerRadius="20"/>

                                <Border Width="700"
                            Height="35"
                            Background="#383660"
                            Margin="75 15 0 0"
                            CornerRadius="20"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <Border Grid.Row="1" 
                Grid.ColumnSpan="3"
                Visibility="Hidden"
                x:Name="PizzaSide">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                        <GradientStop Color="black" 
                                  Offset="0.25"/>
                        <GradientStop Color="#3b5469" 
                                  Offset="1.60"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>
                    <Image Source="Background-Pizza.jpg" 
                    Stretch="UniformToFill" 
                    Grid.Column="0" Grid.Row="0"
                    Opacity="0.78"/>

                    <Border Grid.Row="1"  
                      Background="Transparent"
                      BorderThickness="0 3 0 0">
                        <Border.BorderBrush>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="Gray" Offset="0"/>
                                <GradientStop Color="Red" Offset="0.3"/>
                                <GradientStop Color="#D3D1D1" Offset="0.5"/>
                                <GradientStop Color="Red" Offset="0.7"/>
                                <GradientStop Color="#FF4C70" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.BorderBrush>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <Border  
                                    Grid.RowSpan="4"
                                    HorizontalAlignment="Center"
                                    Margin="0 50 0 0"
                                    Width="500"
                                    Grid.ColumnSpan="2">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#383660" Offset="0"/>
                                        <GradientStop Color="#FF4C70" Offset="0.6"/>
                                        <GradientStop Color="DarkRed" Offset="0.7"/>
                                        <GradientStop Color="#383660" Offset="0.9"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border.Clip>
                                    <RectangleGeometry RadiusX="10"
                                                       RadiusY="10"
                                                       Rect="0 0 470 280"/>
                                </Border.Clip>
                                <Grid Margin="8 8 40 120">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="40"/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="Pizzerer" Foreground="White" 
                                               VerticalAlignment="Bottom" 
                                               FontSize="18" 
                                               FontWeight="Bold"
                                               FontFamily="Fonts/#Dosis"/>
                                    <Border Grid.Row="1"
                                            BorderBrush="White"
                                            BorderThickness="0 2 0 0" >
                                        <Grid >
                                            <ScrollViewer ScrollViewer.VerticalScrollBarVisibility="Hidden">
                                                <ItemsControl ItemsSource="{Binding Pizza}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border>
                                                                <Button x:Name="ValgPizza" 
                                                                    HorizontalContentAlignment="Left" 
                                                                    Margin="6" 
                                                                    Click="Tilføj_Pizza">
                                                                    <Button.Style>
                                                                        <Style TargetType="Button">
                                                                            <Setter Property="TextElement.FontFamily" Value="Fonts/Dosis"/>
                                                                            <Setter Property="Background" Value="White"/>
                                                                            <Setter Property="Cursor" Value="Hand"/>
                                                                            <Style.Triggers>
                                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                                    <Setter Property="Background" Value="#FF4C70"/>
                                                                                </Trigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </Button.Style>
                                                                    <Button.Template>
                                                                        <ControlTemplate TargetType="Button">
                                                                            <Border CornerRadius="12"
                                                                                Background="{TemplateBinding Background}">

                                                                                <ContentPresenter VerticalAlignment="Center"
                                                                              HorizontalAlignment="Left"/>
                                                                            </Border>
                                                                        </ControlTemplate>
                                                                    </Button.Template>
                                                                    <Button.Resources>
                                                                        <Style TargetType="Border">
                                                                            <Setter Property="CornerRadius" Value="20"/>
                                                                        </Style>
                                                                    </Button.Resources>
                                                                    <StackPanel Orientation="Vertical" >
                                                                        <StackPanel Orientation="Horizontal">
                                                                            <TextBlock Text="{Binding Path=Nummer}" 
                                                                   Margin="10,0,3,0" 
                                                                   FontSize="15" 
                                                                   FontWeight="Bold"
                                                                   FontFamily="Fonts/#Dosis"/>
                                                                            <TextBlock Text="{Binding Path=Navn}" 
                                                                   FontSize="15" 
                                                                   FontWeight="Bold"
                                                                   FontFamily="Fonts/#Dosis"/>
                                                                        </StackPanel>
                                                                        <StackPanel HorizontalAlignment="Left" 
                                                                Orientation="Vertical"
                                                                Margin="10 0 15 0">
                                                                            <ItemsControl ItemsSource="{Binding Path=Beskrivelse}"
                                                                      FontFamily="Fonts/#Dosis">
                                                                                <ItemsControl.ItemsPanel>
                                                                                    <ItemsPanelTemplate>
                                                                                        <WrapPanel Orientation="Horizontal"/>
                                                                                    </ItemsPanelTemplate>
                                                                                </ItemsControl.ItemsPanel>
                                                                                <ItemsControl.ItemTemplate>
                                                                                    <DataTemplate>
                                                                                        <TextBlock Text="{Binding}"/>
                                                                                    </DataTemplate>
                                                                                </ItemsControl.ItemTemplate>
                                                                            </ItemsControl>
                                                                        </StackPanel>
                                                                        <StackPanel Orientation="Horizontal" 
                                                                Margin="12 2 0 2">
                                                                            <TextBlock Text="{Binding Path=Pris, StringFormat='{}{0:C}', ConverterCulture='da-DK'}" 
                                                                   HorizontalAlignment="Left" VerticalAlignment="Bottom" 
                                                                   Margin="0,0,3,0" 
                                                                   FontSize="15"
                                                                   FontFamily="Fonts/#Dosis"/>
                                                                        </StackPanel>
                                                                    </StackPanel>
                                                                </Button>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </ScrollViewer>
                                        </Grid>
                                    </Border>
                                </Grid>

                            </Border>

                            <Grid Grid.Row="4" Grid.ColumnSpan="2" 
                                  HorizontalAlignment="Center" 
                                  VerticalAlignment="Top"
                                  Margin="0 15 0 0">
                                <Button Content="Har du lyst til noget at drikke? Klik her" 
                                        FontFamily="Fonts/#Dosis"
                                        Background="Transparent"
                                        FontSize="15"
                                        FontWeight="Medium"
                                        Click="DrikkeSide_Click">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="TextElement.FontFamily" Value="Fonts/Dosis"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="Cursor" Value="Hand"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Foreground" Value="#FF4C70"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}">
                                                <ContentPresenter VerticalAlignment="Center"
                                                                  HorizontalAlignment="Left"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Grid>

                            <Border Grid.Column="3"
                                    Grid.RowSpan="4"
                                    Margin="0 20 0 10"
                                    Grid.ColumnSpan="2">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#383660" Offset="0.1"/>
                                        <GradientStop Color="#FF4C70" Offset="0.5"/>
                                        <GradientStop Color="Black" Offset="0.4"/>
                                        <GradientStop Color="#383660" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border.Clip>
                                    <RectangleGeometry RadiusX="10"
                                                       RadiusY="10"
                                                       Rect="0 0 286 408"/>
                                </Border.Clip>

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition/>
                                        <RowDefinition Height="40" />
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="Order Liste" 
                                       Foreground="#FF4C70" 
                                       Grid.Column="4" Grid.ColumnSpan="2" 
                                       FontFamily="Fonts/#Dosis" 
                                       VerticalAlignment="Bottom" 
                                       HorizontalAlignment="Center" 
                                       FontSize="17" 
                                       FontWeight="Bold" />
                                    <Border  BorderThickness="0 0 0 1.7" 
                                             Grid.Row="1" 
                                             BorderBrush="Black"
                                             HorizontalAlignment="Center">

                                        <Grid>
                                            <ScrollViewer VerticalScrollBarVisibility="Hidden">
                                                <ItemsControl ItemsSource="{Binding _OrderListe}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border Background="White"
                                                                    CornerRadius="15"
                                                                    HorizontalAlignment="Center"
                                                                    Margin="0 0 0 7"
                                                                    Width="250">
                                                                <Grid Margin="0 2 0 0">
                                                                    <Grid.RowDefinitions>
                                                                        <RowDefinition />
                                                                        <RowDefinition Height="30"/>
                                                                    </Grid.RowDefinitions>
                                                                    <Border BorderThickness="0 0 0 2" 
                                                                            Grid.Row="0" 
                                                                            Background="Transparent" >
                                                                        <Button 
                                                                            BorderBrush="Transparent" 
                                                                            MouseRightButtonDown="SletPizza_Click" 
                                                                            Click="EditPizzaMenu"
                                                                            Margin="1 2 1 -5">
                                                                            <Button.Style>
                                                                                <Style TargetType="Button">
                                                                                    <Setter Property="TextElement.FontFamily" Value="Fonts/Dosis"/>
                                                                                    <Setter Property="Background" Value="Transparent"/>
                                                                                    <Setter Property="Cursor" Value="Hand"/>
                                                                                    <Style.Resources>
                                                                                        <Style TargetType="Border">
                                                                                            <Setter Property="CornerRadius" Value="10"/>
                                                                                        </Style>
                                                                                    </Style.Resources>
                                                                                    <Style.Triggers>
                                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                                            <Setter Property="Background" Value="Gray"/>
                                                                                        </Trigger>
                                                                                    </Style.Triggers>
                                                                                </Style>
                                                                            </Button.Style>
                                                                            <Button.Template>
                                                                                <ControlTemplate TargetType="Button">
                                                                                    <Border Background="{TemplateBinding Background}">
                                                                                        <ContentPresenter VerticalAlignment="Top"
                                                                                                      HorizontalAlignment="Center"/>
                                                                                    </Border>
                                                                                </ControlTemplate>
                                                                            </Button.Template>


                                                                            <Grid>
                                                                                <Grid.ColumnDefinitions>
                                                                                    <ColumnDefinition />
                                                                                    <ColumnDefinition />
                                                                                    <ColumnDefinition />
                                                                                </Grid.ColumnDefinitions>
                                                                                <Grid.RowDefinitions>
                                                                                    <RowDefinition />
                                                                                    <RowDefinition />
                                                                                    <RowDefinition />
                                                                                    <RowDefinition />
                                                                                </Grid.RowDefinitions>
                                                                                <TextBlock Text="{Binding Navn}" 
                                                                                       Grid.Column="0" Grid.Row="0" 
                                                                                       Grid.ColumnSpan="3"
                                                                                       FontSize="12" FontWeight="Bold" 
                                                                                       TextDecorations="Underline" 
                                                                                       FontFamily="Fonts/#Dosis"
                                                                                       HorizontalAlignment="Center"
                                                                                       VerticalAlignment="Top"
                                                                                       Margin="0 7 0 2"
                                                                                       TextWrapping="Wrap"/>

                                                                                <StackPanel Grid.Row="1"
                                                                                        Grid.Column="0" 
                                                                                        Grid.ColumnSpan="3" 
                                                                                        HorizontalAlignment="Center"
                                                                                        >
                                                                                    <TextBlock Text="{Binding Beskrivelse}" 
                                                                                           TextWrapping="Wrap" 
                                                                                           FontSize="11"
                                                                                           FontFamily="Fonts/#Dosis"
                                                                                           Margin="10 0 10 0"
                                                                                           />
                                                                                </StackPanel>
                                                                            </Grid>
                                                                        </Button>
                                                                    </Border>
                                                                    <Border Grid.Row="1"
                                                                            BorderBrush="Black"
                                                                            BorderThickness="0 1.5 0 0"
                                                                            Margin="2 4 2 0">
                                                                        <Grid 
                                                                            Margin="0 0 0 0">
                                                                            <Grid.ColumnDefinitions>
                                                                                <ColumnDefinition Width="70"/>
                                                                                <ColumnDefinition />
                                                                                <ColumnDefinition />
                                                                                <ColumnDefinition />
                                                                                <ColumnDefinition Width="70"/>
                                                                            </Grid.ColumnDefinitions>
                                                                            <WrapPanel Orientation="Horizontal" 
                                                                               Grid.Column="3" 
                                                                               Grid.ColumnSpan="2"
                                                                               HorizontalAlignment="Right"
                                                                                       Margin="25 0 15 3"
                                                                               VerticalAlignment="Bottom">
                                                                                <TextBlock Text="{Binding Pris, StringFormat='{}{0:C}', ConverterCulture='da-DK'}" 
                                                                                           TextWrapping="Wrap" 
                                                                                           Margin="2 0 2 0"
                                                                                           FontFamily="Fonts/#Dosis"
                                                                                           FontWeight="Medium"/>
                                                                            </WrapPanel>
                                                                            <StackPanel Margin="0 0 0 5"
                                                                                        VerticalAlignment="Bottom"
                                                                                        HorizontalAlignment="Right"
                                                                                        Orientation="Horizontal">

                                                                                <TextBlock Text="Antal: " 
                                                                                           FontWeight="Bold"
                                                                                           FontFamily="Fonts/#Dosis"/>

                                                                                <TextBlock Text="{Binding Antal}" 
                                                                                           TextWrapping="Wrap" 
                                                                                           FontFamily="Fonts/#Dosis"
                                                                                           Grid.Column="1"/>
                                                                            </StackPanel>


                                                                            <StackPanel Orientation="Horizontal"
                                                                                Grid.Column="1"
                                                                                Grid.ColumnSpan="3"
                                                                                HorizontalAlignment="Center"
                                                                                Margin="0 0 0 0">
                                                                                <Button Content="+"  
                                                                                    Click="AddAntal_Click" 
                                                                                    FontSize="16"
                                                                                    Width="30"
                                                                                    FontWeight="Medium"
                                                                                    BorderBrush="Transparent">

                                                                                    <Button.Style>
                                                                                        <Style TargetType="Button">
                                                                                            <Setter Property="TextElement.FontFamily" Value="Fonts/Dosis"/>
                                                                                            <Setter Property="Background" Value="Transparent"/>
                                                                                            <Setter Property="Cursor" Value="Hand"/>
                                                                                            <Style.Triggers>
                                                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                                                    <Setter Property="Background" Value="Cyan"/>
                                                                                                </Trigger>
                                                                                            </Style.Triggers>
                                                                                        </Style>
                                                                                    </Button.Style>
                                                                                    <Button.Template>
                                                                                        <ControlTemplate TargetType="Button">
                                                                                            <Border Background="{TemplateBinding Background}" >
                                                                                                <ContentPresenter VerticalAlignment="Center"
                                                                                                                   HorizontalAlignment="Center"/>
                                                                                            </Border>
                                                                                        </ControlTemplate>
                                                                                    </Button.Template>
                                                                                </Button>

                                                                                <Button Content="-"  
